# Collection of functions for use in shells

##################
# Navigating
##################

# Create a new directory and enter it
function mkd() {
    mkdir -p "$@" && cd "$@"
}

# Do Math Equations
? () {
  echo "$*" | bc -l;
}

sid () {
curl -X GET http://sessions-api.luc1d.com/api/v2/sessionsbysid/$@ > files.json && open -a "Atom" sidfiles.json && sort-json sidfiles.json
}
